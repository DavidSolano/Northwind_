@using Northwind_.Models
@model IEnumerable<Category>

<div class="bg-primary m-1 p-1 text-white">
    <h4>Category Listing</h4>
</div>
<ul class="list-group">
    @foreach (Category category in Model)
    {
        <li class="list-group-item">
            <a asp-action="Products" asp-route-id="@category.CategoryId">@category.CategoryName - @category.Description</a>
        </li>
    }
</ul>
